{
  "expo": {
    "name": "Rewardly",
    "slug": "rewardly",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "rewards-optimizer",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rewardsoptimizer.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Rewardly uses your location to alert you with the best credit card to use at stores you choose to monitor.",
        "NSLocationWhenInUseUsageDescription": "Rewardly uses your location to recommend the best credit card at your current store.",
        "NSLocationAlwaysUsageDescription": "Rewardly monitors stores you choose in the background to alert you with credit card recommendations.",
        "UIBackgroundModes": ["location", "fetch", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "package": "com.rewardsoptimizer.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single",
      "name": "Rewards Optimizer",
      "shortName": "Rewards",
      "description": "Maximize your credit card rewards with smart recommendations",
      "themeColor": "#007AFF",
      "backgroundColor": "#ffffff"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "owner": "your-expo-username"
  }
}
