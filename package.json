{
  "name": "rewardly",
  "version": "1.0.0",
  "description": "A React Native app that helps Canadians maximize credit card rewards with smart, real-time recommendations for which card to use at any store",
  "keywords": [
    "credit-cards",
    "rewards",
    "cashback",
    "canada",
    "react-native",
    "expo",
    "typescript",
    "rewards-optimization",
    "personal-finance",
    "mobile-app"
  ],
  "author": "tahseen137",
  "repository": {
    "type": "git",
    "url": "https://github.com/tahseen137/rewardly.git"
  },
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "build:web": "expo export -p web",
    "build:preview": "eas build --profile preview --platform all",
    "build:production": "eas build --profile production --platform all",
    "build:android-apk": "eas build --profile preview --platform android",
    "build:ios-simulator": "eas build --profile development --platform ios",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-masked-view/masked-view": "^0.3.2",
    "@react-navigation/bottom-tabs": "^7.9.0",
    "@react-navigation/native": "^7.1.26",
    "@supabase/supabase-js": "^2.90.1",
    "babel-preset-expo": "^54.0.9",
    "expo": "~54.0.31",
    "expo-blur": "~15.0.8",
    "expo-haptics": "^15.0.8",
    "expo-linear-gradient": "~15.0.8",
    "expo-status-bar": "~3.0.9",
    "i18next": "^25.7.4",
    "lucide-react-native": "^0.563.0",
    "react": "19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^16.5.2",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-check": "^4.5.3",
    "jest": "~29.7.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "~5.9.2"
  },
  "private": true
}
